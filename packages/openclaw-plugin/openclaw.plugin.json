{
  "id": "openclaw-plugin",
  "name": "OpenExperts Runtime",
  "description": "Installs and executes OpenExperts packages inside OpenClaw.",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "dataDir": {
        "type": "string",
        "default": "~/.openclaw/openexperts"
      },
      "dedupeWindowMs": {
        "type": "integer",
        "minimum": 1000,
        "default": 3600000
      },
      "lobsterTimeoutMs": {
        "type": "integer",
        "minimum": 1000,
        "default": 600000
      },
      "approvalPollMs": {
        "type": "integer",
        "minimum": 1000,
        "default": 5000
      }
    }
  }
}
