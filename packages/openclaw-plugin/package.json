{
  "name": "@openexperts/openclaw-plugin",
  "version": "0.1.0",
  "private": true,
  "description": "OpenExperts runtime plugin for OpenClaw.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "openclaw.plugin.json",
    "hooks"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "openclaw": {
    "extensions": [
      "./dist/index.js"
    ],
    "hooks": [
      "./hooks/openexperts-gateway-startup",
      "./hooks/openexperts-message-received",
      "./hooks/openexperts-before-prompt-build"
    ]
  }
}
